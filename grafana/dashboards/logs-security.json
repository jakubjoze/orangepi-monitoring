{
  "title": "Logs & Security",
  "schemaVersion": 38,
  "version": 1,
  "tags": [
    "logs",
    "security",
    "orange-pi"
  ],
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "row",
      "title": "Auth & SSH",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "logs",
      "title": "Recent auth.log (SSH/sudo)",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "options": {
        "dedupStrategy": "none",
        "prettifyLogMessage": true
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"authlog\"}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "SSH failed logins / 5m",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 1
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (host) (count_over_time({job=\"authlog\"} |= \"Failed password\" [5m]))"
        }
      ]
    },
    {
      "type": "row",
      "title": "Docker & Syslog",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 11
      }
    },
    {
      "type": "logs",
      "title": "Docker logs (errors/warnings)",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "options": {
        "dedupStrategy": "none",
        "prettifyLogMessage": true
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"docker\"} |~ \"(?i)error|warn\""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Errors by container / 5m",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (container) (count_over_time({job=\"docker\"} |~ \"(?i)error\" [5m]))"
        }
      ]
    }
  ]
}