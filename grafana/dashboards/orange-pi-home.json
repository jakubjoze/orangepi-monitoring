{
  "title": "Orange Pi Monitoring",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "tags": [
    "orange-pi",
    "home"
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROM",
        "label": "prometheus datasource",
        "query": "prometheus",
        "refresh": 1,
        "hide": 0
      },
      {
        "name": "iface",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROM}"
        },
        "refresh": 2,
        "query": "label_values(node_network_receive_bytes_total{device!=\"lo\"}, device)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "disk",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROM}"
        },
        "refresh": 2,
        "query": "label_values(node_disk_read_bytes_total{device!~\"loop.*|ram.*\"}, device)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "target_http",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROM}"
        },
        "refresh": 2,
        "query": "label_values(probe_success{job=\"blackbox_http\"}, instance)",
        "includeAll": true,
        "multi": true
      },
      {
        "name": "target_icmp",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROM}"
        },
        "refresh": 2,
        "query": "label_values(probe_success{job=\"blackbox_icmp\"}, instance)",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "System",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "gauge",
      "title": "CPU %",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "RAM %",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 1
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Disk Free %",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 1
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"}) * 100"
        }
      ]
    },
    {
      "type": "row",
      "title": "Load / Uptime / Temp",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 9
      }
    },
    {
      "type": "stat",
      "title": "Load 1m / core",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 10
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "node_load1 / count without (cpu, mode) (node_cpu_seconds_total{mode=\"idle\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Load 5m / core",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 6,
        "y": 10
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "node_load5 / count without (cpu, mode) (node_cpu_seconds_total{mode=\"idle\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Load 15m / core",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 12,
        "y": 10
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "node_load15 / count without (cpu, mode) (node_cpu_seconds_total{mode=\"idle\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Uptime",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 18,
        "y": 10
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "time() - node_boot_time_seconds"
        }
      ]
    },
    {
      "type": "stat",
      "title": "CPU Temp (\u00b0C)",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 15
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max(node_hwmon_temp_celsius)"
        }
      ]
    },
    {
      "type": "row",
      "title": "Network & Disk",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 20
      }
    },
    {
      "type": "timeseries",
      "title": "Network RX (bytes/s)",
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 0,
        "y": 21
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(instance) (rate(node_network_receive_bytes_total{device=~\"$iface\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network TX (bytes/s)",
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 12,
        "y": 21
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(instance) (rate(node_network_transmit_bytes_total{device=~\"$iface\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Read (bytes/s)",
      "gridPos": {
        "h": 7,
        "w": 8,
        "x": 0,
        "y": 28
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(instance) (rate(node_disk_read_bytes_total{device=~\"$disk\", device!~\"loop.*|ram.*\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Write (bytes/s)",
      "gridPos": {
        "h": 7,
        "w": 8,
        "x": 8,
        "y": 28
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by(instance) (rate(node_disk_written_bytes_total{device=~\"$disk\", device!~\"loop.*|ram.*\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk I/O Util (%)",
      "gridPos": {
        "h": 7,
        "w": 8,
        "x": 16,
        "y": 28
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg by(instance) (rate(node_disk_io_time_seconds_total{device=~\"$disk\", device!~\"loop.*|ram.*\"}[5m]) * 100)"
        }
      ]
    },
    {
      "type": "row",
      "title": "Blackbox",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 35
      }
    },
    {
      "type": "stat",
      "title": "HTTP Up (1=OK)",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 36
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "probe_success{job=\"blackbox_http\", instance=~\"$target_http\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ]
        }
      }
    },
    {
      "type": "table",
      "title": "HTTP Status Code (last)",
      "gridPos": {
        "h": 8,
        "w": 10,
        "x": 6,
        "y": 36
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "probe_http_status_code{job=\"blackbox_http\", instance=~\"$target_http\"}",
          "instant": true
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Ping RTT (s)",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 36
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "probe_icmp_duration_seconds{job=\"blackbox_icmp\", instance=~\"$target_icmp\"}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "SSL Days Left",
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 44
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROM}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "d"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(probe_ssl_earliest_cert_expiry{job=\"blackbox_http\", instance=~\"$target_http\"} - time()) / 86400",
          "instant": true
        }
      ]
    }
  ]
}